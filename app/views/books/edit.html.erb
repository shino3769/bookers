<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors 
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'updateBook' %>
  <%= link_to "show", book_path(@book.id) %>
 <a class="back" href="/books">Back</a>
<% end %>
