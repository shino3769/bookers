<h1>Books</h1>

<% @books.each do |book| %>
<p>Title</p>
<span>
    <%= link_to book.title, "/books/#{book.id}" %>
</span>
  <p>Body</p>
  
  <%= book.body %>
  <%= link_to "show"%>
  <%= link_to "edit"%>
 <%= link_to "Delete", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>


<h1>New book</h1>


<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'createBook' %>
<% end %>
